{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "auditor-tools",
  "version": "0.1.0",
  "identifier": "com.example.auditor-tools",
  "build": {
    "beforeBuildCommand": "npm run build:css",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Auditor Tools",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "index.html",
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}


